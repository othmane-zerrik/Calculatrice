<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF8DC"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="-5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text=""
                android:layout_marginTop="0dp"
                android:id="@+id/resultat"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/operation"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text=""
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="AC"
                android:id="@+id/AC"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:textSize="25dp"
                android:backgroundTint="#F44336" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="("
                android:id="@+id/ouvre"
                android:textStyle="bold"
                android:backgroundTint="#767575"
                android:textColor="#FFEB3B"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text=")"
                android:id="@+id/ferme"
                android:textStyle="bold"
                android:backgroundTint="#767575"

                android:textColor="#FFEB3B"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/div"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="/"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="#FFEB3B"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="7"
                android:id="@+id/n7"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/n8"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/n9"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="*"
                android:id="@+id/fois"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="#FFEB3B"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/n4"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/n5"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/n6"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="-"
                android:id="@+id/mois"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="#FFEB3B"
                android:textSize="25dp"/>
        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/n1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/n2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/n3"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="+"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="#FFEB3B"
                android:textSize="25dp"
                android:id="@+id/plus"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="%"
                android:id="@+id/porcentage"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/n0"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#FFEB3B"
                android:textSize="25dp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="."
                android:id="@+id/virgule"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:textSize="25dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="="
                android:id="@+id/egale"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:textSize="25dp"
                android:backgroundTint="#FF5722"
                />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>